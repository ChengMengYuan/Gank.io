<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cmy.bigsnow">

    <!-- 获取网络连接 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".utils.ActivityUtil"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 首页Activity -->
        <activity
            android:name=".app.index.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 详情界面Activity -->
        <activity
            android:name=".app.index.ui.activity.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- 搜索界面Activity -->
        <activity
            android:name=".app.search.activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- 关于界面Activity -->
        <activity
            android:name=".app.about.AboutMeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- 福利界面Activity -->
        <activity
            android:name=".app.welfare.activity.WelfareActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>