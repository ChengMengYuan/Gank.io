<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_daily"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_light_background"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:scaleType="fitCenter"
                android:text="这里是标题(标题测试)"
                android:textColor="@color/colorTextBlack"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/tv_author_daily"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tv_title_daily"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corners"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="author"
                android:textColor="#626262"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/round"/>

            <TextView
                android:id="@+id/tv_time_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tv_title_daily"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:text="2017-01-14 星期五(时间测试)"
                android:textAlignment="viewStart"
                android:textColor="#9E9E9E"
                android:textSize="12dp"
                android:textStyle="italic"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>